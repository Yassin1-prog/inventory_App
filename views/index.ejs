<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GameVerse - Your Ultimate Gaming Destination</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/index.css" />
  </head>
  <body>
    <%- include('header') %>

    <main>
      <section class="hero">
        <div class="hero-content">
          <h1>Welcome to GameVerse</h1>
          <p>Your ultimate destination for all things gaming</p>
          <a href="/games" class="cta-button">Shop Now</a>
        </div>
      </section>

      <section class="featured-section">
        <div class="container">
          <h2 class="section-title">Featured Games</h2>
          <div class="game-grid">
            <% topgames.forEach( (topgame) => { %>
            <a href="/games/<%= topgame.game_id %>" class="game-card">
              <img src="<%= topgame.image_url %>" alt="Game 1" />
              <div class="game-info">
                <h3 class="game-title"><%= topgame.title%></h3>
                <p class="game-price"><%= '$' + topgame.price %></p>
                <p class="game-price">
                  <i class="fas fa-star"></i><%= topgame.rating %>
                </p>
              </div>
            </a>
            <% }) %>
          </div>
        </div>
      </section>
    </main>

    <%- include('footer') %>
  </body>
</html>
