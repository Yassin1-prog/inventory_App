<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GameVerse - Your Ultimate Gaming Destination</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/index.css" />
  </head>
  <body>
    <%- include('header') %>
    <main>
      <div class="container">
        <h1>All Genres</h1>
        <div class="game-grid">
          <% genres.forEach(function(genre) { %>
          <div class="game-card">
            <img src="<%= genre.image_url %>" alt="<%= genre.name %>" />
            <div class="game-info">
              <h2 class="game-title"><%= genre.name %></h2>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </main>
    <%- include('footer') %>
  </body>
</html>
